{% extends 'base.html.twig' %}

{% block title %}Biblioth√®que{% endblock %}
    
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('styles/app.css') }}">
    {% endblock %}

{% block body %}
<style>
    .tabs {
        display: flex;
        justify-content: center;
        margin-bottom: 20px;
    }
    .tabs button {
        background-color: #f4f4f4;
        border: none;
        padding: 10px 20px;
        cursor: pointer;
        font-size: 16px;
        color: #333;
        border-radius: 5px 5px 0 0;
        margin-right: 5px;
    }
    .tabs button.active {
        background-color: #4a4a8c;
        color: white;
        font-weight: bold;
    }
    .tabs button:hover {
        background-color: #ddd;
    }
    .grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
        gap: 20px;
        padding: 20px;
    }
    .card {
        position: relative;
        text-align: center;
        border: 1px solid #ddd;
        border-radius: 8px;
        overflow: hidden;
        background-color: white;
    }
    .card img {
        width: 100%;
        height: 150px;
        object-fit: cover;
    }
    .card h3 {
        margin: 10px 0 5px;
        font-size: 16px;
    }
    .card p {
        margin: 0 0 10px;
        font-size: 14px;
        color: gray;
        text-align: left;
        padding-left: 20px;
    }
    .card .nationality {
        position: absolute;
        bottom: 10px;
        right: 15px;
        width: 30px;
        height: 20px;
        border: 1px solid white;
        border-radius: 3px;
    }
</style>
{{ render(controller('App\\Controller\\NavbarController::navbar')) }}

<div>
    <div class="tabs">
        <button class="active">Auteurs</button>
        <button onclick="window.location.href='{{ path('app_library_articles') }}'">Articles</button>
        <button onclick="window.location.href='{{ path('app_library_books') }}'">Livres</button>
    </div>

    <div class="grid">
        {% for author in authors %}
        <div class="card">
            <a href="{{ author.link }}" target="_blank">
                <img src="{{ author.image }}" alt="{{ author.name }}">
            </a>
            <h3>{{ author.name }}</h3>
            <p>{{ author.birthYear }} - {{ author.deathYear ?: '' }}</p>
            <img src="{{ asset('images/flags/' ~ author.nationality ~ '.png') }}" alt="{{ author.nationality }}" class="nationality">
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}