{% extends 'base.html.twig' %}

{% block title %}Biblioth√®que{% endblock %}

{% block body %}
<style>
    .tabs {
        display: flex;
        justify-content: center;
        margin-bottom: 20px;
    }
    .tabs button {
        background-color: #f5f5f5;
        border: none;
        padding: 10px 20px;
        margin: 0 5px;
        cursor: pointer;
        font-size: 16px;
    }
    .tabs button.active {
        background-color: #007bff;
        color: white;
    }
    .grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
        gap: 20px;
        padding: 20px;
    }
    .card {
        text-align: center;
        border: 1px solid #ddd;
        border-radius: 8px;
        overflow: hidden;
        background-color: white;
    }
    .card img {
        width: 100%;
        height: 150px;
        object-fit: cover;
    }
    .card h3 {
        margin: 10px 0 5px;
        font-size: 16px;
    }
    .card p {
        margin: 0 0 10px;
        font-size: 14px;
        color: gray;
    }
    .card .nationality {
        font-size: 20px;
    }
</style>

<div>
    <div class="tabs">
        <button class="active">Auteurs</button>
        <button>Articles</button>
        <button>Livres</button>
    </div>

    <div class="grid">
        {% for author in authors %}
        <div class="card">
            <a href="{{ author.link }}" target="_blank">
                <img src="{{ author.image }}" alt="{{ author.name }}">
            </a>
            <h3>{{ author.name }}</h3>
            <p>{{ author.birthYear }} - {{ author.deathYear ?: '' }}</p>
            <p class="nationality">{{ author.nationality }}</p>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
