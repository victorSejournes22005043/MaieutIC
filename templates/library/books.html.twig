{% extends 'base.html.twig' %}

{% block title %}Biblioth√®que{% endblock %}

{% block body %}
<style>
    .tabs {
        display: flex;
        justify-content: center;
        margin-bottom: 20px;
    }
    .tabs button {
        background-color: #f4f4f4;
        border: none;
        padding: 10px 20px;
        cursor: pointer;
        font-size: 16px;
        color: #333;
        border-radius: 5px 5px 0 0;
        margin-right: 5px;
    }
    .tabs button.active {
        background-color: #4a4a8c;
        color: white;
        font-weight: bold;
    }
    .tabs button:hover {
        background-color: #ddd;
    }
    .grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
        gap: 20px;
        padding: 20px;
    }
    .card {
        position: relative;
        text-align: center;
        border: 1px solid #ddd;
        border-radius: 8px;
        overflow: hidden;
        background-color: white;
    }
    .card img {
        width: 100%;
        height: 150px;
        object-fit: cover;
    }
    .card h3 {
        margin: 10px 0 5px;
        font-size: 16px;
    }
    .card p {
        margin: 0 0 10px;
        font-size: 14px;
        color: gray;
        text-align: center;
    }
</style>

<div>
    <div class="tabs">
        <button onclick="window.location.href='{{ path('app_library') }}'">Auteurs</button>
        <button onclick="window.location.href='{{ path('app_library_articles') }}'">Articles</button>
        <button class="active">Livres</button>
    </div>

    <div class="grid">
        {% for book in books %}
        <div class="card">
            <a href="{{ book.link }}" target="_blank">
                <img src="{{ book.image }}" alt="{{ book.title }}">
            </a>
            <h3>{{ book.title }}</h3>
            <p>{{ book.author }}</p>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}