{% if posts is empty %}
    <div class="bg-gray-100 rounded-lg p-4 text-center text-gray-500">Aucun post.</div>
{% else %}
    {% for post in posts %}
        <div class="bg-white rounded-lg p-4 shadow mb-4">
            <div class="font-bold text-lg mb-2">{{ post.name }}</div>
            <div class="text-gray-700 mb-2 break-words">{{ post.description }}</div>
            <div class="text-xs text-gray-400">Publi√© le {{ post.creationDate|date('d/m/Y H:i') }}</div>
        </div>
    {% endfor %}
{% endif %}
